{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES6",
    "types": ["node", "jest"],
    "module": "commonjs",     
    "outDir": "dist",      
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
